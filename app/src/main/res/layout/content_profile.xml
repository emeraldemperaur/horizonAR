<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInfo"
        android:layout_width="wrap_content"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <iot.empiaurhouse.horizonar.ProfileImageView
        android:background="@drawable/profileimg"
        android:elevation="6dp"
        android:scaleType="centerCrop"
        android:id="@+id/profileUserImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:visibility="visible"
        android:contentDescription="@string/app_name"
        android:adjustViewBounds="true"
        android:src="@drawable/userprofile_holder"
        />


          


    <TextView
        android:id="@+id/profileUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-6dp"
        android:fontFamily="@font/montserratmedium"
        android:textColor="@color/colorAccent"
        android:textSize="27sp"
        android:visibility="visible"
        android:text=""

        />

    <TextView
        android:id="@+id/profileUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-3dp"
        android:fontFamily="@font/montserratlight"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:visibility="visible"
        android:text=""
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/profileUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/montserratlight"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:visibility="visible"
        android:text=""
        android:textStyle="bold"


        />

</LinearLayout></androidx.cardview.widget.CardView>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:text="@string/ar_profile_info"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/montserratmedium"

        />




    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewUserName"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="visible"
            android:text="NAME"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserratregular"

            />



        <EditText
            android:layout_marginStart="4dp"
            android:padding="3dp"
            android:visibility="gone"
            android:id="@+id/profileUserNameEdit"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="3"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="23sp"
            android:inputType="textPersonName"
            android:maxLength="13"
            android:fontFamily="@font/montserratregular"
            android:hint="@string/name_placeholder" />



            <TextView
                android:layout_marginStart="4dp"
                android:padding="3dp"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:text="NAME"
                android:id="@+id/profileUserNameText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="3"
                android:textSize="19sp"
                android:fontFamily="@font/montserratmedium"
                android:hint="@string/email_placeholder"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout></androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewUserPhone"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:visibility="visible"
                android:text="PHONE"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserratregular"

                />


        <EditText
            android:layout_marginStart="4dp"
            android:padding="3dp"
            android:visibility="gone"
            android:id="@+id/profileUserPhoneEdit"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="3"
            android:textSize="23sp"
            android:inputType="phone"
            android:maxLength="13"
            android:fontFamily="@font/montserratregular"
            android:hint="@string/phone_placeholder" />



            <TextView
                android:layout_marginStart="4dp"
                android:padding="3dp"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:text="PHONE"
                android:id="@+id/profileUserPhoneText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="3"
                android:textSize="19sp"
                android:fontFamily="@font/montserratmedium"
                android:hint="@string/email_placeholder"
                android:layout_marginBottom="15dp"
                />






           </LinearLayout></androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewUserEmail"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:visibility="visible"
                android:text="EMAIL"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserratregular"

                />

        <EditText
            android:layout_marginStart="4dp"
            android:padding="3dp"
            android:visibility="gone"
            android:id="@+id/profileUserEmailEdit"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="3"
            android:textSize="23sp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserratregular"
            android:hint="@string/email_placeholder"
            android:layout_marginBottom="15dp"
            />


            <TextView
                android:layout_marginStart="4dp"
                android:padding="3dp"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:text="EMAIL"
                android:id="@+id/profileUserEmailText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="3"
                android:textSize="19sp"
                android:minLines="2"
                android:maxLines="2"
                android:fontFamily="@font/montserratmedium"
                android:hint="@string/email_placeholder"
                android:layout_marginBottom="15dp"
                />

</LinearLayout></androidx.cardview.widget.CardView>




    <Button
        android:visibility="gone"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:padding="2dp"
        android:background="@color/colorAccent"
        android:id="@+id/profileUpdateButton"
        android:text="@string/update"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:textSize="17sp"
        android:fontFamily="@font/montserratsemibold"
        android:layout_height="wrap_content" />



</LinearLayout>
</ScrollView>