<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_marginStart="6dp"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="visible"
            android:text="@string/build_info"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserratregular"

            />

        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:id="@+id/cardViewBuildInfo"
            android:layout_width="wrap_content"
            android:background="?android:selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            android:padding="13dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            app:cardElevation="13dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:padding="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:src="@drawable/horizonapplogo"
                    android:id="@+id/iv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratmedium"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text="@string/build_version_1_0_0"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text="@string/ar_core_version_1_12_0"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:paddingBottom="0dp"
                        android:text="Prometheus"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>


        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"/>


        <TextView
            android:layout_marginStart="6dp"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="visible"
            android:text="@string/developer_info"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserratregular"

            />




        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:id="@+id/cardViewDeveloperInfo"
            android:layout_width="match_parent"
            android:background="?android:selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            android:padding="13dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            app:cardElevation="13dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:padding="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:visibility="visible"
                    android:text="@string/developer_name"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/montserratsemibold"

                    />


                <TextView
                    android:layout_marginStart="0dp"
                    android:padding="3dp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/developer_website_url"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ems="3"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserratlight"
                    android:hint="@string/email_placeholder"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_marginStart="0dp"
                    android:padding="3dp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/github_com_emeraldemperaur"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ems="3"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserratlight"
                    android:hint="@string/developer_info"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:textStyle="italic"
                    android:layout_marginStart="0dp"
                    android:padding="0dp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:text="@string/emeka_egwim_empiaurhouse_com"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ems="3"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserratlight"
                    android:hint="@string/developer_info"
                    android:layout_marginBottom="15dp"
                    />


                <LinearLayout
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:scaleType="fitXY"
                        android:padding="3dp"
                        android:src="@drawable/facebookicon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>

                    <ImageView
                        android:scaleType="fitXY"
                        android:padding="3dp"
                        android:src="@drawable/linkedin_icon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>

                </LinearLayout>

            </LinearLayout></androidx.cardview.widget.CardView>


        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"/>


        <TextView
            android:layout_marginStart="6dp"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="visible"
            android:text="@string/device_info"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserratregular"

            />

        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:id="@+id/cardViewDeviceInfo"
            android:layout_width="match_parent"
            android:background="?android:selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            android:padding="13dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:padding="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:padding="3dp"
                    android:src="@drawable/eharicon"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="111dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:textAllCaps="true"
                        android:id="@+id/deviceOEM"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratmedium"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deviceID"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deviceModel"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deviceBuildOS"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deviceResolution"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_marginBottom="2dp"
                        android:id="@+id/deviceDPI"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratlight"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />





                </LinearLayout>
            </LinearLayout></androidx.cardview.widget.CardView>









    </LinearLayout>
</ScrollView>