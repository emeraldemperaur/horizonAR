<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInfo"
        android:layout_width="wrap_content"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="13dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:scaleType="centerCrop"
                android:background="@drawable/horizonapplogo"
                android:id="@+id/crumbProfileImage"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                />





            <TextView
                android:id="@+id/seeBreadcrumbsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-3dp"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:visibility="visible"
                android:text="Maxim title"

                />

            <TextView
                android:textAlignment="center"
                android:id="@+id/seeBreadcrumbsContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="visible"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:textStyle="normal"
                android:maxLines="4"
                android:lines="4"

                />

            <TextView
                android:id="@+id/seeBreadcrumbsUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible"
                android:text="@string/user"
                android:textStyle="normal"


                />

        </LinearLayout></androidx.cardview.widget.CardView>



</LinearLayout>