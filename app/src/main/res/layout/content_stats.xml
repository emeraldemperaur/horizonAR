<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/cardviewStatsUserProfile"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:paddingBottom="3dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <iot.empiaurhouse.horizonar.ProfileImageView
                android:elevation="6dp"
                android:background="@drawable/profileimg"
                android:id="@+id/statsProfileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/userprofile_holder"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statsProfileName"
                    android:padding="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:text=""
                    android:textSize="21sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal" />


                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:text="aRUBICON CROSS DATE"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal" />

                <TextView
                    android:paddingEnd="6dp"
                    android:textSize="16sp"
                    android:layout_marginTop="-4dp"
                    android:id="@+id/statsRubiconCrossDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:paddingBottom="0dp"
                    android:text="@string/not_available"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold|italic" />


                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:text="PREVIOUS VANTAGE POINT"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal" />

                <TextView
                    android:paddingEnd="6dp"
                    android:textSize="16sp"
                    android:layout_marginTop="-4dp"
                    android:id="@+id/statsPreviousVantagePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:paddingBottom="0dp"
                    android:text="@string/not_available"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:text="@string/discoverer_rank"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal" />

                <TextView
                    android:paddingEnd="6dp"
                    android:textSize="16sp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/statsProfileRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:paddingBottom="0dp"
                    android:text="@string/not_available"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </LinearLayout></androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/statsProfileLastAdventure"
        android:layout_marginStart="6dp"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:text="@string/last_adventure_holder"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/montserratregular"

        />

    <View
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"/>


    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/cardCrumbsCount"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:text="@string/breadcrumbs_count"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserratregular"

                />


            <TextView
                android:textAlignment="center"
                android:layout_marginStart="0dp"
                android:padding="3dp"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:text="21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/montserratsemibold"
                android:hint="@string/email_placeholder"
                android:layout_marginBottom="3dp"
                />


            <View
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"/>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_see_red_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal"
                    android:fontFamily="@font/montserratregular"
                    android:textColor="@color/colorAccent"
                    android:text=" SEEN: 11"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:fontFamily="@font/montserratregular"
                    android:textColor="@color/colorAccent"
                    android:text="    "
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_listen_red_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal"
                    android:fontFamily="@font/montserratregular"
                    android:textColor="@color/colorAccent"
                    android:text=" HEARD : 10"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>








        </LinearLayout></androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/cardViewCitiesExplored"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="13dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserratregular"
                android:text="@string/cities_explored"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:textStyle="normal"
                android:visibility="visible"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserratsemibold"
                android:hint="@string/email_placeholder"
                android:padding="3dp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimary" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/cardViewCountriesVisited"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:text="@string/countries_visited"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserratregular"

                />


            <TextView
                android:textAlignment="center"
                android:layout_marginStart="0dp"
                android:padding="3dp"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/montserratsemibold"
                android:hint="@string/email_placeholder"
                android:layout_marginBottom="3dp"
                />


            <View
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"/>








        </LinearLayout></androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/cardViewFavouriteLocations"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginBottom="0dp"
        android:padding="13dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:text="@string/favourite_locations"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserratregular"

                />


            <TextView
                android:textAlignment="center"
                android:layout_marginStart="0dp"
                android:padding="3dp"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:text="13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/montserratsemibold"
                android:hint="@string/email_placeholder"
                android:layout_marginBottom="3dp"
                />


            <View
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"/>








        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="33dp"
        android:visibility="invisible"
        android:id="@+id/noDataError"
        android:fontFamily="@font/montserratregular"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_available"
        android:textSize="36sp" />




</LinearLayout></ScrollView>